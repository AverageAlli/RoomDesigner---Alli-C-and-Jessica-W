<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bsu.cs.RoomDesignerController">
   <children>
      <VBox layoutX="30.0" layoutY="30.0" spacing="10.0">
         <children>
            <Label text="Room Dimensions" />
            <HBox>
               <children>
                  <Label text="Length:" />
                  <TextField fx:id="lengthTextField" promptText="Enter length" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Width:" />
                  <TextField fx:id="widthTextField" promptText="Enter width" />
               </children>
            </HBox>
            <Button text="Generate Room" onAction="#generateRoom" />
            <ComboBox fx:id="furnitureComboBox" promptText="Select Furniture" />
         </children>
      </VBox>
   </children>
</AnchorPane>